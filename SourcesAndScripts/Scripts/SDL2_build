#!/usr/bin/env bash
#
# SDL2_build
# Martin HrubÃ½ (hrubymar10), 2019-2020
#

set -e

SDL2_VERSION="2.0.12"
SDL2_SHA256="349268f695c02efbc9b9148a70b85e58cefbbf704abd3e91be654db7f1e2c863"
SDL2_image_VERSION="2.0.5"
SDL2_image_SHA256="bdd5f6e026682f7d7e1be0b6051b209da2f402a2dd8bd1c4bd9c25ad263108d0"
SDL2_mixer_VERSION="2.0.4"
SDL2_mixer_SHA256="b4cf5a382c061cd75081cf246c2aa2f9df8db04bdda8dcdc6b6cca55bede2419"
SDL2_net_VERSION="2.0.1"
SDL2_net_SHA256="15ce8a7e5a23dafe8177c8df6e6c79b6749a03fff1e8196742d3571657609d21"
SDL2_ttf_VERSION="2.0.15"
SDL2_ttf_SHA256="a9eceb1ad88c1f1545cd7bd28e7cbc0b2c14191d40238f531a15b01b1b22cd33"

starttimestamp=$(date +%s)

MY_PATH=$(cd `dirname ${0}` && pwd)
if [ -z "${MY_PATH}" ] ; then
  # error; for some reason, the path is not accessible
  # to the script (e.g. permissions re-evaled after suid)
  echo 'Error: Script path is for some reason not accessible' >&2
  exit 1  # fail
fi
cd "${MY_PATH}/../Sources"

source "${MY_PATH}/env"
source "${MY_PATH}/functions"

check_wget
check_xcode
check_freetype

rm -rf "SDL2"
mkdir "SDL2"
cd "SDL2"

get_src_and_verify_checksum "SDL2-${SDL2_VERSION}.tar.gz" "${SDL2_SHA256}" "https://www.libsdl.org/release/SDL2-${SDL2_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/SDL2-${SDL2_VERSION}.tar.gz" -C .
ln -s "SDL2-${SDL2_VERSION}" "SDL"
cd "SDL"
./configure --without-x --disable-dependency-tracking --enable-shared
make update-revision
make
rm -rf "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
mkdir -p "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
cp "build/.libs/libSDL2-2.0.0.dylib" "${MY_PATH}/../CompiledLibs/SDL2-RELEASE/libSDL2-2.0.0.dylib"
cd "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
install_name_tool -id "@rpath/libSDL2-2.0.0.dylib" "libSDL2-2.0.0.dylib"
edit_dylib_deps "libSDL2-2.0.0.dylib"
rm -rf "${MY_PATH}/../../lib/libSDL2-2.0.0.dylib"
cp -rf "libSDL2-2.0.0.dylib" "${MY_PATH}/../../lib/libSDL2-2.0.0.dylib"
cd "${MY_PATH}/../Sources/SDL2/SDL"
mkdir "${MY_PATH}/../Sources/SDL2/SDL/dist"
./configure --prefix="${MY_PATH}/../Sources/SDL2/SDL/dist"
make install-hdrs
rm -rf "${MY_PATH}/../../Headers/SDL2"
cp -rf "${MY_PATH}/../Sources/SDL2/SDL/dist/include/SDL2" "${MY_PATH}/../../Headers/SDL2"

cd "${MY_PATH}/../Sources/SDL2"

get_src_and_verify_checksum "SDL2_image-${SDL2_image_VERSION}.tar.gz" "${SDL2_image_SHA256}" "https://www.libsdl.org/projects/SDL_image/release/SDL2_image-${SDL2_image_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/SDL2_image-${SDL2_image_VERSION}.tar.gz" -C .
cd "SDL2_image-${SDL2_image_VERSION}"
./configure --disable-dependency-tracking --enable-shared
make
cp ".libs/libSDL2_image-2.0.0.dylib" "${MY_PATH}/../CompiledLibs/SDL2-RELEASE/libSDL2_image-2.0.0.dylib"
cp -rf "SDL_image.h" "${MY_PATH}/../../Headers/SDL2/SDL_image.h"
cd "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
install_name_tool -id "@rpath/libSDL2_image-2.0.0.dylib" "libSDL2_image-2.0.0.dylib"
edit_dylib_deps "libSDL2_image-2.0.0.dylib"
rm -rf "${MY_PATH}/../../lib/libSDL2_image-2.0.0.dylib"
cp -rf "libSDL2_image-2.0.0.dylib" "${MY_PATH}/../../lib/libSDL2_image-2.0.0.dylib"

cd "${MY_PATH}/../Sources/SDL2"

get_src_and_verify_checksum "SDL2_mixer-${SDL2_mixer_VERSION}.tar.gz" "${SDL2_mixer_SHA256}" "https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-${SDL2_mixer_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/SDL2_mixer-${SDL2_mixer_VERSION}.tar.gz" -C .
cd "SDL2_mixer-${SDL2_mixer_VERSION}"
./configure --disable-dependency-tracking --enable-shared
make
cp "build/.libs/libSDL2_mixer-2.0.0.dylib" "${MY_PATH}/../CompiledLibs/SDL2-RELEASE/libSDL2_mixer-2.0.0.dylib"
cp -rf "SDL_mixer.h" "${MY_PATH}/../../Headers/SDL2/SDL_mixer.h"
cd "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
install_name_tool -id "@rpath/libSDL2_mixer-2.0.0.dylib" "libSDL2_mixer-2.0.0.dylib"
edit_dylib_deps "libSDL2_mixer-2.0.0.dylib"
rm -rf "${MY_PATH}/../../lib/libSDL2_mixer-2.0.0.dylib"
cp -rf "libSDL2_mixer-2.0.0.dylib" "${MY_PATH}/../../lib/libSDL2_mixer-2.0.0.dylib"

cd "${MY_PATH}/../Sources/SDL2"

get_src_and_verify_checksum "SDL2_net-${SDL2_net_VERSION}.tar.gz" "${SDL2_net_SHA256}" "https://www.libsdl.org/projects/SDL_net/release/SDL2_net-${SDL2_net_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/SDL2_net-${SDL2_net_VERSION}.tar.gz" -C .
cd "SDL2_net-${SDL2_net_VERSION}"
./configure --disable-dependency-tracking --enable-shared
make
cp ".libs/libSDL2_net-2.0.0.dylib" "${MY_PATH}/../CompiledLibs/SDL2-RELEASE/libSDL2_net-2.0.0.dylib"
cp -rf "SDL_net.h" "${MY_PATH}/../../Headers/SDL2/SDL_net.h"
cd "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
install_name_tool -id "@rpath/libSDL2_net-2.0.0.dylib" "libSDL2_net-2.0.0.dylib"
edit_dylib_deps "libSDL2_net-2.0.0.dylib"
rm -rf "${MY_PATH}/../../lib/libSDL2_net-2.0.0.dylib"
cp -rf "libSDL2_net-2.0.0.dylib" "${MY_PATH}/../../lib/libSDL2_net-2.0.0.dylib"

cd "${MY_PATH}/../Sources/SDL2"

get_src_and_verify_checksum "SDL2_ttf-${SDL2_ttf_VERSION}.tar.gz" "${SDL2_ttf_SHA256}" "https://www.libsdl.org/projects/SDL_ttf/release/SDL2_ttf-${SDL2_ttf_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/SDL2_ttf-${SDL2_ttf_VERSION}.tar.gz" -C .
cd "SDL2_ttf-${SDL2_ttf_VERSION}"
./configure --disable-dependency-tracking --enable-shared
make
cp ".libs/libSDL2_ttf-2.0.0.dylib" "${MY_PATH}/../CompiledLibs/SDL2-RELEASE/libSDL2_ttf-2.0.0.dylib"
cp -rf "SDL_ttf.h" "${MY_PATH}/../../Headers/SDL2/SDL_ttf.h"
cd "${MY_PATH}/../CompiledLibs/SDL2-RELEASE"
install_name_tool -id "@rpath/libSDL2_ttf-2.0.0.dylib" "libSDL2_ttf-2.0.0.dylib"
edit_dylib_deps "libSDL2_ttf-2.0.0.dylib"
rm -rf "${MY_PATH}/../../lib/libSDL2_ttf-2.0.0.dylib"
cp -rf "libSDL2_ttf-2.0.0.dylib" "${MY_PATH}/../../lib/libSDL2_ttf-2.0.0.dylib"

echo "==> DONE ..."
echo
time_interval_to_string "${starttimestamp}" "$(date +%s)"
echo