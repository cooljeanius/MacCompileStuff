#!/usr/bin/env bash
#
# fontconfig_build
# Martin HrubÃ½ (hrubymar10), 2018-2020
#

set -e

FONTCONFIG_VERSION="2.13.1"
SHA256="9f0d852b39d75fc655f9f53850eb32555394f36104a044bb2b2fc9e66dbbfa7f"

starttimestamp=$(date +%s)

MY_PATH=$(cd `dirname ${0}` && pwd)
if [ -z "${MY_PATH}" ] ; then
  # error; for some reason, the path is not accessible
  # to the script (e.g. permissions re-evaled after suid)
  echo 'Error: Script path is for some reason not accessible' >&2
  exit 1  # fail
fi
cd "${MY_PATH}/../Sources"

source "${MY_PATH}/env"
source "${MY_PATH}/functions"

check_wget
check_xcode
check_freetype

rm -rf "fontconfig-"*
get_src_and_verify_checksum "fontconfig-${FONTCONFIG_VERSION}.tar.gz" "${SHA256}" "https://www.freedesktop.org/software/fontconfig/release/fontconfig-${FONTCONFIG_VERSION}.tar.gz"
tar xf "${MY_PATH}/../Sources/archives/fontconfig-${FONTCONFIG_VERSION}.tar.gz" -C .
cd "fontconfig-${FONTCONFIG_VERSION}"
patch -b < "${MY_PATH}/fontconfig.patch"
./configure --disable-docs --disable-dependency-tracking --disable-silent-rules --enable-shared --with-add-fonts="/System/Library/Fonts","/Library/Fonts","~/Library/Fonts"
make
mkdir "fontconfig-${FONTCONFIG_VERSION}-RELEASE"
cp "src/.libs/libfontconfig.1.dylib" "fontconfig-${FONTCONFIG_VERSION}-RELEASE/libfontconfig.1.dylib"
cd "fontconfig-${FONTCONFIG_VERSION}-RELEASE"
install_name_tool -id "@rpath/libfontconfig.1.dylib" "libfontconfig.1.dylib"
edit_dylib_deps "libfontconfig.1.dylib"
cd "${MY_PATH}/../"
rm -rf "CompiledLibs/fontconfig-"*
mv "Sources/fontconfig-${FONTCONFIG_VERSION}/fontconfig-${FONTCONFIG_VERSION}-RELEASE" "CompiledLibs/fontconfig-${FONTCONFIG_VERSION}-RELEASE"
rm -rf "../Headers/fontconfig"
mkdir "../Headers/fontconfig"
cp -rf "Sources/fontconfig-${FONTCONFIG_VERSION}/fontconfig/fontconfig.h" "../Headers/fontconfig/fontconfig.h"
rm -rf "../lib/libfontconfig"*
cp -rf "CompiledLibs/fontconfig-${FONTCONFIG_VERSION}-RELEASE/libfontconfig.1.dylib" "../lib/libfontconfig.1.dylib"
echo "==> DONE ..."
echo
time_interval_to_string "${starttimestamp}" "$(date +%s)"
echo